<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:paddingTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/a_usertime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_condensed_light"
                android:layout_centerVertical="true"
                android:text="9:00AM"
                android:textSize="20sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/bordercolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <RelativeLayout
                    android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/usericon" />

                    <RelativeLayout
                        android:id="@+id/lay3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/a_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="Jake,"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/a_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:layout_below="@+id/a_username"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="Male"
                            android:textColor="@color/purple_200"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phonelay"
                    android:layout_width="match_parent"
                    android:layout_below="@id/lay2"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/a_userphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="070363737" />
                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/phonelay"
                        android:paddingBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/user_date"
                            android:textColor="@color/purple_200"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6:00PM - 8:00PM" />
                    </RelativeLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>