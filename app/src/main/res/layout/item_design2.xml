<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_container"
                android:backgroundTint="@color/white"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/viewline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/usericon" />

                    <RelativeLayout
                        android:id="@+id/firstlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/receipent_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_condensed_light"
                            android:text="Mr. John Cooper"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/receipent_name"
                            android:fontFamily="@font/alice"
                            android:text="Male"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/firstlayout"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#45000000"/>

                </RelativeLayout>

<RelativeLayout
    android:id="@+id/timeanddate"
    android:layout_below="@id/viewline"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dateofappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/01/2023"
        android:drawableTint="#52000000"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/timeofappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30AM"
        android:drawableTint="#52000000"
        android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"/>

</RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/timeanddate"
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancelbtn"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_marginHorizontal="5dp"
                        android:backgroundTint="#E4808080"
                        android:paddingVertical="15dp"
                        app:cornerRadius="20dp"
                        android:textColor="@color/white"
                        android:textSize="30px"
                        android:text="Cancel"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/acceptbtn"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:paddingVertical="15dp"
                        android:text="Accept"
                        app:cornerRadius="20dp"
                        android:textSize="30px"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>


                </RelativeLayout>

                </RelativeLayout>




        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>